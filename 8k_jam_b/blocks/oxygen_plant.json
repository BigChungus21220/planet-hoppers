{
  "format_version": "1.16.100",
  "minecraft:block": {
    "description": {
        "identifier": "ek:oxygen_plant"
    },
    "components": {
      "minecraft:loot": "loot_tables/blocks/oxygen_plant.json",
      "minecraft:geometry": "geometry.cross_plant",
      "minecraft:pick_collision": {
        "origin": [-3, 0, -3],
        "size": [6, 10, 6]
      },
      "minecraft:material_instances": {
        "*": {
          "texture": "oxygen_plant",
          "render_method": "alpha_test"
        }
      },
      "minecraft:block_light_absorption" : 0,
      "minecraft:block_light_emission" : 0,
      "minecraft:placement_filter": {
        "conditions": [
          {
            "allowed_faces": ["up"]
          }
        ]
      },
      "minecraft:on_interact": {
        "event": "interact",
        "target": "other"
      },
      "minecraft:entity_collision": false
    },
    "events": {
      "interact": {
        "sequence": [
          {
            "run_command": {
              "command": [
                "event entity @s ek:fill_oxygen"
              ],
              "target": "other"
            }
          },
          {
            "run_command": {
              "command": [
                "particle ek:space_bubble ~ ~ ~",
                "setblock ~ ~ ~ ek:oxygen_plant_empty"
              ],
              "target": "self"
            }
          }
        ]
      }
    }
  }
}